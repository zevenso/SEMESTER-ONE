        case 3:
            mostrarMayorNumero(arreglo, CANTIDAD);
            break;
        case 4:
            mostrarMenorNumero(arreglo, CANTIDAD);
            break;
        case 5:
            ordenarYMostrarArreglo(arreglo, CANTIDAD);
            break;
        }

        system("pause");
    }

    return 0;
}
