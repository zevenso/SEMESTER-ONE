void Dibujar_Personaje(Personaje personaje) {
    Console::SetCursorPosition(personaje.x, personaje.y); cout << "-";
}


void Borrar_Personaje(Personaje personaje) {
    Console::SetCursorPosition(personaje.x, personaje.y); cout << " ";
}

void Movimiento(Personaje& personaje, int mundo[ALTO][ANCHO]) {

    char tecla;

    if (_kbhit()) {

        tecla = toupper(_getch());
        switch (tecla)
        {

        case 'W':
            if (mundo[personaje.y - personaje.dy][personaje.x] == 0) {
                mundo[personaje.y][personaje.x] = 1;
                Mapa(mundo);
                personaje.y -= personaje.dy;
            } break;
        case 'S':
            if (mundo[personaje.y + personaje.dy][personaje.x] == 0) {
                mundo[personaje.y][personaje.x] = 1;
                Mapa(mundo);
                personaje.y += personaje.dy;
            } break;
        case 'A':
            if (mundo[personaje.y][personaje.x - personaje.dx] == 0) {
                mundo[personaje.y][personaje.x] = 1;
                Mapa(mundo);
                personaje.x -= personaje.dx;
            } break;
        case 'D':
            if (mundo[personaje.y][personaje.x + personaje.dx] == 0) {
                mundo[personaje.y][personaje.x] = 1;
                Mapa(mundo);
                personaje.x += personaje.dx;

            } break;

        }

    }

}

int main() {

  

    Console::SetWindowSize(ANCHO + 1, ALTO + 1);
    Console::CursorVisible = false;
    srand(time(NULL));


    personaje.x = 19;
    personaje.y = 2;
    personaje.dx = 1;
    personaje.dy = 1;
    Mapa(mundo);
    do {
        Dibujar_Personaje(personaje); _sleep(1);
        Borrar_Personaje(personaje);
        Movimiento(personaje, mundo);

    } while (true);

    _getch();
    return 0;

}

