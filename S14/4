 for (int i = 0; i < FILAS; i++)
	{
		for (int j = 0; j < COLUMNAS; j++)
		{
			Console::SetCursorPosition(0 + j, 0 + i);
			switch (mapa[i][j])
			{
			case 0: cout << " ";	break;
			case 1:	cout << (char)219; break;
			}
		}
		cout << endl;
	}
}
struct Personaje {
	int x, y;
	int dx, dy;
	int ancho, alto;
	int color;
};
void dibujarPersonaje(Personaje personaje){
	Console::SetCursorPosition(personaje.x, personaje.y); cout << "*";
}
void borrarPersonaje(Personaje personaje){
	Console::SetCursorPosition(personaje.x, personaje.y); cout << " ";
}
void moverPersonaje(Personaje& personaje, int mapa[FILAS][COLUMNAS]) {
	char tecla;
	if (_kbhit()) {
		tecla = toupper(_getch());
		switch (tecla)
		{
		case 'W':
			if (mapa[personaje.y - personaje.dy][personaje.x] == 0) {
				mapa[personaje.y][personaje.x] = 1;
				dibujarMapa(mapa);
				personaje.y -= personaje.dy;
			}
			break;
		case 'S':
			if (mapa[personaje.y + personaje.dy][personaje.x] == 0) {
				mapa[personaje.y][personaje.x] = 1;
				dibujarMapa(mapa);
				personaje.y += personaje.dy;
			}
			break;
		case 'A':
			if (mapa[personaje.y][personaje.x - personaje.dx] == 0) {
				mapa[personaje.y][personaje.x] = 1;
				dibujarMapa(mapa);
				personaje.x -= personaje.dx;
			}
			break;
		case 'D':
			if (mapa[personaje.y][personaje.x + personaje.dx] == 0) {
				mapa[personaje.y][personaje.x] = 1;
				dibujarMapa(mapa);
				personaje.x += personaje.dx;
			}
			break;
		}
 
	}
 
}
int main() {
	Console::SetWindowSize(41, 41);
	Console::CursorVisible = false;
	srand(time(NULL));
	//creamos el mapa de 40 x 40

	dibujarMapa(mapa);
 
	Personaje personaje;
	personaje.x = 19;
	personaje.y = 0;
	personaje.dx = 1;
	personaje.dy = 1;
	personaje.ancho = 1;
	personaje.alto = 1;
	personaje.color = 2;
 
	do
	{
		//dibujar
		dibujarPersonaje(personaje);
		_sleep(1);
		//borrar
		borrarPersonaje(personaje);
		//mover
		moverPersonaje(personaje, mapa);
	} while (true);
	_getch();
	return 0;
}
